<?xml version="1.0" encoding="UTF-8"?>  
<c3p0-config>  
    <!-- 默认配置，只可以出现一次 -->  
    <named-config name="mysql">  
    	<!-- 配置连接池性能 -->
        <property name="idleConnectionTestPeriod">10000</property>  
        <property name="checkoutTimeout">10000</property>  
        <property name="initialPoolSize">5</property>  
        <property name="minPoolSize">5</property>  
        <property name="maxPoolSize">30</property>  
        <property name="acquireIncrement">5</property>  
        <property name="maxStatements">50</property>  

		<!-- 实现数据库连接 -->
        <property name="driverClass">com.mysql.jdbc.Driver</property>  
        <property name="jdbcUrl">jdbc:mysql:///mvcdemo</property>  
        <property name="user">root</property>  
        <property name="password">0</property>  
        
    </named-config>   
    <named-config name="oracle">  
    	<!-- 配置连接池性能 -->
        <property name="idleConnectionTestPeriod">0</property>  
        <property name="checkoutTimeout">0</property>  
        <property name="initialPoolSize">5</property>  
        <property name="minPoolSize">5</property>  
        <property name="maxPoolSize">30</property>  
        <property name="acquireIncrement">5</property>  
        <property name="maxStatements">50</property>  

		<!-- 实现数据库连接 -->
        <property name="driverClass">oracle.jdbc.driver.OracleDriver</property>  
        <property name="jdbcUrl">jdbc:oracle:thin:@10.2.156.193:1521:orcl</property>  
        <property name="user">scott</property>  
        <property name="password">tiger</property>  
        
    </named-config>   
</c3p0-config>   